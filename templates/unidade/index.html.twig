{% extends 'base.html.twig' %}

{% block title %}Unidades{% endblock %}

{% block body %}

<main>
   <div class="content">
      <section class="full">
         <div class="secao">
            <h3 class="titulo">Unidades</h3>
            <table class="table table-striped table-bordered datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Sigla</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for unidade in unidades %}
                    <tr>
                        <td>{{ unidade.id }}</td>
                        <td>{{ unidade.nome }}</td>
                        <td>{{ unidade.sigla }}</td>
                        <td>
                            <a href="{{ path('unidade_show', {'id': unidade.id}) }}">show</a>
                            <a href="{{ path('unidade_edit', {'id': unidade.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('unidade_new') }}">Create new</a>

        </div>
      </section>
   </div>
</main>
{% endblock %}