{% extends 'base.html.twig' %}

{% block title %}Usu√°rios{% endblock %}

{% block body %}

<main>
   <div class="content">
      <section class="full">
         <div class="secao">
            <h3 class="titulo">Unidades</h3>
            <table class="table table-striped table-bordered datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>FullName</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td></td>
                        <td>
                            <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                            <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('user_new') }}">Create new</a>

        </div>
      </section>
   </div>
</main>
{% endblock %}